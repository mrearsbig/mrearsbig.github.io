---
import profileWhite from "../assets/white.png";
import profileBlack from "../assets/black.png";
import { UserRound, FolderClosed, Briefcase } from "lucide-react";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import {
  faGithub,
  faLinkedin,
  faXTwitter,
  faInstagram,
  faFacebook,
} from "@fortawesome/free-brands-svg-icons";
import { Button } from "./ui/button";
---

<div
  class="min-h-screen w-full relative bg-background lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-[48%] lg:flex-col lg:justify-between"
>
  {/* Profile Image - Mobile Only - Full Screen */}
  <div class="absolute inset-0 z-0 lg:hidden overflow-hidden">
    {/* Image for light mode */}
    <img
      src={profileWhite.src}
      alt="Alexander Viafara Profile"
      class="w-full h-full object-cover dark:hidden"
      style={{
        filter: "brightness(0.9) contrast(1.1) sepia(0.15) saturate(1.2)",
        mixBlendMode: "multiply",
      }}
    />
    {/* Image for dark mode */}
    <img
      src={profileBlack.src}
      alt="Alexander Viafara Profile"
      class="w-full h-full object-cover hidden dark:block"
      style={{
        filter:
          "brightness(0.75) contrast(1.05) sepia(0.3) hue-rotate(10deg) saturate(1.4)",
        mixBlendMode: "multiply",
      }}
    />
    {/* Gradient overlay - fades image to background color at bottom */}
    <div
      class="absolute inset-0 bg-gradient-to-b from-transparent from-50% to-background to-100%"
    >
    </div>
  </div>

  {/* Your Content/Components */}
  <header
    class="relative z-10 flex h-screen flex-col items-start justify-end px-6 pb-12 lg:justify-between lg:py-20"
  >
    {/* Personal and Navigation */}
    <div class="flex flex-col gap-16 mb-8">
      {/* Personal */}
      <section class="flex flex-col items-start text-start lg:pt-6">
        <hgroup class="flex flex-col gap-2 mb-3">
          <h1 class="text-4xl font-bold tracking-tight">
            <a href="/">Alexander Viafara</a>
          </h1>
          <h2 class="text-2xl font-medium tracking-tight">Systems Engineer</h2>
        </hgroup>
        <p class="text-muted-foreground max-w-2xs lg:max-w-xs">
          Turning ideas into great results — Code. Create. Conquer.
        </p>
      </section>

      {/* Navigation (Visible solo en desktop) */}
      <nav class="hidden lg:block" aria-label="Navegación principal">
        <ul class="flex flex-col gap-4">
          <li>
            <a href="#about">
              <Button
                variant="ghost"
                className="bg-accent text-accent-foreground"
              >
                <UserRound /> About
              </Button>
            </a>
          </li>
          <li>
            <a href="#projects">
              <Button variant="ghost" className="text-muted-foreground">
                <FolderClosed /> Projects
              </Button>
            </a>
          </li>
          <li>
            <a href="#experience">
              <Button variant="ghost" className="text-muted-foreground">
                <Briefcase /> Experience
              </Button>
            </a>
          </li>
        </ul>
      </nav>
    </div>

    {/* Social Media Icons */}
    <div class="flex items-center gap-6">
      <nav aria-label="Redes sociales">
        <ul class="flex gap-4">
          <li>
            <a
              href="http://github.com/mrearsbig"
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground/80 transition-colors"
              aria-label="Perfil de GitHub"
            >
              <FontAwesomeIcon icon={faGithub} className="h-6 w-6" />
            </a>
          </li>
          <li>
            <a
              href="http://linkedin.com/in/mrearsbig"
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground/80 transition-colors"
              aria-label="Perfil de LinkedIn"
            >
              <FontAwesomeIcon icon={faLinkedin} className="h-6 w-6" />
            </a>
          </li>
          <li>
            <a
              href="http://x.com/mrearsbig"
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground/80 transition-colors"
              aria-label="Perfil de X (Twitter)"
            >
              <FontAwesomeIcon icon={faXTwitter} className="h-6 w-6" />
            </a>
          </li>
          <li>
            <a
              href="http://instagram.com/mrearsbig"
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground/80 transition-colors"
              aria-label="Perfil de Instagram"
            >
              <FontAwesomeIcon icon={faInstagram} className="h-6 w-6" />
            </a>
          </li>
          <li>
            <a
              href="http://facebook.com/mrearsbig"
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground/80 transition-colors"
              aria-label="Perfil de Facebook"
            >
              <FontAwesomeIcon icon={faFacebook} className="h-6 w-6" />
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </header>
</div>
